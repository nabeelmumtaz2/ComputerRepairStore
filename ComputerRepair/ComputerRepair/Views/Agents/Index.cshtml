    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.First_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Last_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Employ_Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Shift_Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.System.Brands)
        </td>
        <td>

            <a href="@Url.Action("Edit", "Agents", new { id = item.Agent_Id })" class="btn btn-primary">
                Edit
                <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
            </a>
            <a href="@Url.Action("Details", "Agents", new { id = item.Agent_Id })" class="btn btn-info">
                Details
                <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>
            </a>
            <a href="@Url.Action("Delete", "Agents", new { id = item.Agent_Id })" class="btn btn-danger">
                Delete
                <span class="glyphicon glyphicon-remove-sign" aria-hidden="true"></span>
            </a>
            
        </td>
